<?xml version="1.0" encoding="UTF-8"?>
<odoo>

         <record model="ir.ui.view" id="blb_map_view_1">
            <field name="model">res.partner</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <hello_world display_contacts="1" >
                </hello_world>
            </field>
        </record>

        <record model="ir.ui.view" id="blb_map_view_2">
            <field name="model">res.partner</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <hello_world js_class="hello_world_evolution" display_contacts="1" >
                </hello_world>
            </field>
        </record>

        <record model="ir.actions.act_window" id="first_blb_map_view">
            <field name="name">Maps</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">hello_world</field>
            <field name="view_id" ref="blb_map_view_1"/>
        </record>

        <record model="ir.actions.act_window" id="second_blb_map_view">
            <field name="name">Maps</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">hello_world</field>
            <field name="view_id" ref="blb_map_view_2"/>
        </record>

        <menuitem id="main_hello_world_menu" name="Buganda Land Board GIS"/>

        <menuitem id="hello_world_submenu" name="Map Menu"
                  parent="main_hello_world_menu"/>

        <menuitem id="open_view" name="Open Hello World View" parent="hello_world_submenu"
                  action="first_blb_map_view"/>
        <menuitem id="open_view_2" name="Open Hello World View Evolution" parent="hello_world_submenu"
                  action="second_blb_map_view"/>

</odoo>