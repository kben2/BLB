    <!-- BLB Appraisals - explicit kanban view definition *************************************************************************** --> 
    <record model="ir.ui.view" id="blb_appraisals.blb_appraisals_kanban_view" >
      <field name="name">BLB Appraisals</field>
      <field name="model">blb_appraisals.blb_appraisals</field>
      <field name="arch" type="xml">
        <kanban create="false">
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <div class="o_kanban_image">
                  <img src="/blb_appraisals/static/description/icon.png" class="o_kanban_image" alt="Recommendation/Action"/>
                </div>
                <div class="oe_kanban_details">                  
                  <ul> 
                    <li> <span style="color:#000088; font-size:14px;"> <strong> <field name="name"/> </strong> </span> </li>                  
                    <li> <span style="color:#000000; font-size:12px;"> Title:  <strong><field name="job_title"></field> </strong></span> </li>
                    <li> <span style="color:#000000; font-size:12px;"> Department: <strong><field name="department_id"/> </strong></span> </li>
                    <li> <span style="color:#000000; font-size:12px;"> Branch: <strong><field name="blb_branch"/> </strong></span> </li>
                    <li> <span style="color:#000000; font-size:12px;"> Supervisor: <strong><field name="supervisor_employee_id"/> </strong></span> </li>
                  </ul>                  
                  <field name="status" decoration-info="status=='added'" decoration-warning="status=='pending_supervisor_approval'" 
                    decoration-primary="status=='pending_hr_approval'" decoration-muted="status=='closed'" widget="badge" optional="show"/>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record> 

