    <!-- BLB - Section Activity Questions  explicit form view definition ************************************************************** -->
    <record model="ir.ui.view" id="blb_appraisals.section_a_lines_form">
      <field name="name">Appraisal Section A - Form</field>
      <field name="model">blb_appraisals.section_a_lines</field>
      <field name="arch" type="xml">
        <form>   
          <sheet>
            <separator string="Appraisal Section A" />
            <group>
                <group>
                  <field name="question_id" invisible="1"/>
                  <field name="factor_objective" readonly="1"/>
                  <field name="activity_question" readonly="1"/>
                  <field name="target" attrs="{'invisible':[('target','=',False)]}" readonly="1"/>
                  <field name="weight" attrs="{'invisible':[('weight','=',0)]}" readonly="1"/>
                  <field name="actual_achievement" attrs="{'readonly':[('status','in',['pending_hr_approval','closed'])]}"/>
                </group>
                <group>
                  <field name="self_rating" attrs="{'readonly':[('status','in',['pending_hr_approval','closed'])], 
                    'invisible':[('self_rating_figure','!=',0.0),('self_rating_figure','!=',False)]}"/>

                  <field name="self_rating_figure" readonly="1" 
                    attrs="{'invisible':['|',('self_rating_figure','=',0.0),('self_rating_figure','=',False)]}" />

                  <field name="appraiser_rating" attrs="{'required':[('status','=','pending_supervisor_approval')], 
                    'readonly':[('status','in',['pending_hr_approval','closed'])], 
                    'invisible':[('appraiser_rating_figure','!=',0.0),('appraiser_rating_figure','!=',False)]}"/>

                  <field name="appraiser_rating_figure" readonly="1"
                    attrs="{'invisible':['|',('appraiser_rating_figure','=',0.0),('appraiser_rating_figure','=',False)]}"/>

                  <field name="appraiser_comments" attrs="{'readonly':[('status','in',['pending_hr_approval','closed'])]}"/>
                  <field name="weighted_rating" invisible="1"/>
                  <field name="status" invisible="1"/>
                </group>
            </group>        
          </sheet>
        </form>
      </field>
    </record>

