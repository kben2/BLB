    <!-- BLB Appraisals - explicit form view definition --> 
    <record model="ir.ui.view" id="blb_appraisals.groundrent_revision_form">
      <field name="name">BLB Appraisals Form</field>
      <field name="model">blb_appraisals.blb_appraisals</field>
      <field name="arch" type="xml">
        <form create="false">   
          <header>
            <button name="action_to_supervisor" string="Forward to Supervisor for Approval" type="object" status="added" class="btn-primary" 
              attrs="{'invisible':[('status','!=','added')]}"/>
            <button name="action_supervisor_approved" string="Approved By Supervisor" type="object" status="pending_supervisor_approval" 
                class="btn-success" attrs="{'invisible':[('status','!=','pending_supervisor_approval')]}"/>
            <button name="action_hr_approved" string="HR Approved. Mark as Closed" type="object" status="pending_hr_approval" class="btn-success"
              attrs="{'invisible':[('status','!=','pending_hr_approval')]}" groups="blb_base.blb_hr_officer"/>

            <field name="status" widget="statusbar" statusbar_visible="added,pending_supervisor_approval,pending_hr_approval,closed"/>
          </header>
          <sheet>
            <separator string="BLB Appraisal Form" />
            <group>
                <group>
                  <field name="employee_id"/>
                  <field name="job_title"/>
                  <field name="department_id"/>
                  <field name="blb_branch"/>
                  <field name="supervisor_employee_id"/>
                </group>
                <group>
                    <field name="review_from" attrs="{'readonly':[('status','!=','added')]}"/> 
                    <field name="review_to" attrs="{'readonly':[('status','!=','added')]}"/>
                    <field name="type_appraisal" attrs="{'readonly':[('status','!=','added')]}" readonly="1"/>
                    <field name="date_created"/>
                    <field name="date_approved_supervisor" attrs="{'invisible':[('status','=','added')]}"/>
                    <field name="date_approved_hr" attrs="{'invisible':[('status','in',['added','pending_supervisor_approval'])]}"/>
                    <field name="status" invisible="1"/> 
                    <field name="section_a" invisible="1"/> 
                    <field name="section_b" invisible="1"/> 
                    <field name="section_c" invisible="1"/> 
                    <field name="section_d" invisible="1"/> 
                </group>
            </group>   
            <notebook colspan="4">
              <page string="Section A" attrs="{'invisible':[('section_a','=',False)]}">
                <field name="section_a_lines" attrs="{'readonly':[('status','in',['pending_hr_approval','closed'])]}">  
                  <tree string="Section A">
                    <field name="factor_objective"/>
                    <field name="activity_question"/>
                    <field name="self_rating_figure"/>
                    <field name="appraiser_rating_figure"/>
                    <field name="weighted_rating" attrs="{'invisible':[('weighted_rating','=',False)]}"/>
                    <field name="status" invisible="1"/>
                  </tree>                  
                </field>
              </page> 
              <page string="Section B" attrs="{'invisible':[('section_b','=',False)]}">
                <field name="section_b_lines" attrs="{'readonly':[('status','in',['pending_hr_approval','closed'])]}">  
                  <tree string="Section B">
                    <field name="factor_objective"/>
                    <field name="activity_question"/>
                    <field name="self_rating_figure"/>
                    <field name="appraiser_rating_figure"/>
                    <field name="weighted_rating" attrs="{'invisible':[('weighted_rating','=',False)]}"/>
                    <field name="status" invisible="1"/>
                  </tree>                  
                </field>
              </page>
              <page string="Section C" attrs="{'invisible':[('section_c','=',False)]}">
                <field name="section_c_lines" attrs="{'readonly':[('status','in',['pending_hr_approval','closed'])]}">  
                  <tree string="Section C">
                    <field name="factor_objective"/>
                    <field name="activity_question"/>
                    <field name="self_rating_figure"/>
                    <field name="appraiser_rating_figure"/>
                    <field name="weighted_rating" attrs="{'invisible':[('weighted_rating','=',False)]}"/>
                    <field name="status" invisible="1"/>
                  </tree>                  
                </field>
              </page>
              <page string="Section D" attrs="{'invisible':[('section_d','=',False)]}">
                <field name="section_d_lines" attrs="{'readonly':[('status','in',['pending_hr_approval','closed'])]}">  
                  <tree string="Section D">
                    <field name="factor_objective"/>
                    <field name="activity_question"/>
                    <field name="self_rating_figure"/>
                    <field name="appraiser_rating_figure"/>
                    <field name="weighted_rating" attrs="{'invisible':[('weighted_rating','=',False)]}"/>
                    <field name="status" invisible="1"/>
                  </tree>                  
                </field>
              </page>

              <page string="Overall Assessment" attrs="{'invisible':[('type_appraisal','=',False)]}"> 
                <group>
                    <field name="overall_assessment_a" attrs="{'invisible':[('section_a','=',False)]}"/>
                    <field name="overall_assessment_b" attrs="{'invisible':[('section_b','=',False)]}"/>
                    <field name="overall_assessment_c" attrs="{'invisible':[('section_c','=',False)]}"/>
                    <field name="overall_assessment_d" attrs="{'invisible':[('section_d','=',False)]}"/>
                    <field name="overall_assessment_total"/> 
                    <field name="total_score_points"/>
                </group>
              </page>
              <page string="Comments" attrs="{'invisible':[('type_appraisal','=',False)]}">
                <group>
                    <field name="comments_employee" attrs="{'readonly':[('status','in',['pending_hr_approval','closed'])]}"/>
                    <field name="comments_supervisor" attrs="{'readonly':[('status','in',['pending_hr_approval','closed'])]}"/>
                    <field name="recommendations_supervisor" attrs="{'readonly':[('status','in',['pending_hr_approval','closed'])]}"/>
                    <field name="recommendations_hod" attrs="{'readonly':[('status','in',['closed'])]}"/>
                </group>
              </page>
            </notebook>     
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>


