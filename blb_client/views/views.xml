    <!-- Clients - explicit form view definition **************************************************************************** -->
    <record model="ir.ui.view" id="blb_client.blb_client_form">
      <field name="name">Clients Form</field>
      <field name="model">blb_client.blb_client</field>
      <field name="arch" type="xml">
        <form>   <!-- string="Client Form" -->
          <header>
            <button name="action_check_points" string="Check Plot" type="object" states="fileopen,blbregistry,survey" class="btn-primary"/>
            <button name="action_to_legal" string="Send to Legal" type="object" states="fileopen" class="btn-primary"/>
            <button name="action_to_blbregistry" string="Send to BLB Registry" type="object" states="legal" class="btn-primary"/>
            <button name="action_to_survey" string="Send to Survey" type="object" states="blbregistry,blbregistry_report" 
              class="btn-primary"/>
            <button name="action_to_planning" string="Send to Planning" type="object" states="survey,survey_rectify" 
              class="btn-primary"/>

            <button name="action_back_to_registry" string="Back to BLB Registry" type="object" states="planning" class="btn-warning"/>
            <button name="action_back_to_survey" string="Back to Survey" type="object" states="planning" class="btn-warning"/>

            <button name="action_to_processing" string="Send to Processing" type="object" states="planning" class="btn-primary"/>
            <button name="action_to_valuation" string="Send to Valuation" type="object" states="processing" class="btn-primary"/>
            <button name="action_to_lease" string="Send to Lease Committee" type="object" states="valuation" class="btn-primary"/>
            <button name="action_to_title" string="Send to Title Processing" type="object" states="lease" class="btn-primary"/>
            <button name="action_to_issue" string="Send to Title Issuing" type="object" states="title" class="btn-primary"/>
            <button name="action_to_done" string="Mark as Done" type="object" states="issue" class="btn-primary"/>
            <button name="action_cancel" states="fileopen,blbregistry" type="object" string="Cancel"/>
            <field name="state" widget="statusbar" 
              statusbar_visible="fileopen,legal,blbregistry,survey,planning,processing,valuation,lease,title,issue,done,cancel"/>
          </header>
          <sheet>
            <!-- <separator string="Client Form" /> -->
            <div class="oe_title">
              <h1>
                <field name="name" readonly="1"/>
              </h1>
            </div>
            <group name="group_1"  string="File Opening Details">
              <group>              
                <field name="temp_file_no"/>
                <field name="client_name" attrs="{'readonly':[('state','!=','fileopen')]}"/>
                <field name="old_registryfile_id" attrs="{'invisible':[('old_registryfile_id','=',False)]}"/>
                <field name ="contact_details"/>
                <!--<field name="area_estimate_units"/>
                <field name="area_estimate"/> attrs="{'readonly':[('state', '=', 'done')]}" -->
                <field name="area_estimate_hectares"/>
                <field name="area_estimate_acres"/>
                <field name ="plot_geojson"/>
				        <!-- <field name ="centroid_eastings"/>
                <field name ="centroid_northings"/> -->
                <field name="check_wetland" attrs="{'invisible':[('check_surveyed','=',False)]}" style="color:Red;" />
                <field name="check_surveyed" attrs="{'invisible':[('check_surveyed','=',False)]}" style="color:Red;"/>
                <field name="check_blbland" attrs="{'invisible':[('check_blbland','=',False)]}" style="color:Red;"/>
              </group>
              <group>              
                <field name="coordinates_system" attrs="{'readonly':[('state','!=','fileopen')]}"/>
                <field name="location_x" attrs="{'readonly':[('state','!=','fileopen')]}"/>
                <field name="location_y" attrs="{'readonly':[('state','!=','fileopen')]}"/>
                <field name="location" attrs="{'readonly':[('state','!=','fileopen')]}"/>
                <field name="created_by"/>
                <field name="created_branch"/>
              </group>
            </group>

            <notebook colspan="4" attrs="{'invisible':[('state','=','fileopen')]}">
              <page string="Legal">
                <separator string=""/>
                <group string="Legal Details" attrs="{'invisible':[('state','not in',['legal','blbregistry','survey','planning','processing','valuation','lease','title','issue','done'])]}"> 
                    <field name="ownership_type" attrs="{'readonly':[('state','!=','legal')]}"/>
                    <field name="legal_ownershippurchase" widget="many2many_tags" options="{'no_create_edit': False}" attrs="{'invisible':[('ownership_type','!=','Ownership - Purchase')], 'required': [('ownership_type','=','Ownership - Purchase')]}"/>
                    <field name="legal_ownershipinheritance" widget="many2many_tags" options="{'no_create_edit': False}" attrs="{'invisible':[('ownership_type','!=','Ownership - Inheritance')], 'required': [('ownership_type','=','Ownership - Inheritance')]}"/>
                    <field name="legal_ownershipdonation" widget="many2many_tags" options="{'no_create_edit': False}" attrs="{'invisible':[('ownership_type','!=','Ownership - Donation')], 'required': [('ownership_type','=','Ownership - Donation')]}"/>
                    <field name="legal_companies" widget="many2many_tags" options="{'no_create_edit': False}" attrs="{'invisible':[('ownership_type','!=','Companies')], 'required': [('ownership_type','=','Companies')]}"/>
                    <field name="legal_ngos" widget="many2many_tags" options="{'no_create_edit': False}" attrs="{'invisible':[('ownership_type','!=','Non-Goverment Organisations')], 'required': [('ownership_type','=','Non-Goverment Organisations')]}"/>
                    <field name="legal_trusts" widget="many2many_tags" options="{'no_create_edit': False}" attrs="{'invisible':[('ownership_type','!=','Trusts')], 'required': [('ownership_type','=','Trusts')]}"/>
                    <field name="legal_remarks" attrs="{'readonly':[('state','!=','legal')]}"/>
                </group>
              </page>

              <page string="Registry and Survey">
                <separator string=""/>
                <group>
                  <group string="BLB Registry Details" attrs="{'invisible':[('state','not in',['blbregistry','survey','planning','processing','valuation','lease','title','issue','done'])]}"> 
                    <field name="clearing_by"/>
                    <field name="receipt_survey" attrs="{'readonly':[('state','!=','blbregistry')]}"/>
                    <field name="file_no" attrs="{'readonly':[('state','!=','blbregistry')]}"/>
                  </group>
                  <group string="Survey Details" attrs="{'invisible':[('state','not in',['survey','planning','processing','valuation','lease','title','issue','done'])]}"> 
                      <field name="type_survey" attrs="{'readonly':[('state','!=','survey')]}"/>
                      <field name="date_assigned_survey" attrs="{'readonly':[('state','!=','survey')]}"/>
                      <field name="user_assigned_survey" attrs="{'readonly':[('state','!=','survey')]}"/>
                      <field name="surveyed_by" attrs="{'readonly':[('state','!=','survey')]}"/>
                      <field name="date_survey" attrs="{'readonly':[('state','!=','survey')]}"/>
					  <field name="date_worked_on" attrs="{'readonly':[('state','!=','survey')]}"/>
                  </group>
                </group>
              </page>

              <page string="Planning and Processing">
                <separator string=""/>
                <group>
                  <group string="Planning Details" attrs="{'invisible':[('state','not in',['planning','processing','valuation','lease','title','issue','done'])]}"> 
                      <field name="planned_by" attrs="{'readonly':[('state','!=','planning')]}"/>
                      <field name="date_planning" attrs="{'readonly':[('state','!=','planning')]}"/>
                      <field name="remarks_planning" attrs="{'readonly':[('state','!=','planning')]}"/>
                  </group>
                  <group string="Processing Details"  attrs="{'invisible':[('state','not in',['processing','valuation','lease','title','issue','done'])]}"> 
                      <field name="processing_by" attrs="{'readonly':[('state','!=','processing')]}"/>
                      <field name="date_start_processing" attrs="{'readonly':[('state','!=','processing')]}"/>
                      <field name="date_end_processing" attrs="{'readonly':[('state','!=','processing')]}"/>
                      <field name="block_no" attrs="{'readonly':[('state','!=','processing')]}"/>
                      <field name="plot_no" attrs="{'readonly':[('state','!=','processing')]}"/>
                  </group>
                </group>
              </page>

              <page string="Valuation and Lease Committee">
                <separator string=""/>
                <group>
                  <group string="Valuation Details"  attrs="{'invisible':[('state','not in',['valuation','lease','title','issue','done'])]}"> 
                      <field name="date_valuation" attrs="{'readonly':[('state','!=','valuation')]}"/>
                      <field name="valuer" attrs="{'readonly':[('state','!=','valuation')]}"/>
                      <field name="receipt_valuation" attrs="{'readonly':[('state','!=','valuation')]}"/>
                  </group>
                  <group string="Lease Committee Details"  attrs="{'invisible':[('state','not in',['lease','title','issue','done'])]}">
						<field name="date_lease_committee"/>
                      <field name="duration_lease" attrs="{'readonly':[('state','!=','lease')]}"/>
                  </group>
                </group>
              </page>

              <page string="Title Processing and Issuing">
                <separator string=""/>
                <group>
                  <group string="Title Processing Details"  attrs="{'invisible':[('state','not in',['title','issue','done'])]}"> 
                      <field name="date_start_title_processing" attrs="{'readonly':[('state','!=','title')]}"/>
                      <field name="date_end_title_processing" attrs="{'readonly':[('state','!=','title')]}"/>
                  </group> 
                  <group string="Title Issuing Details"  attrs="{'invisible':[('state','not in',['issue','done'])]}"> 
                      <field name="date_issued" attrs="{'readonly':[('state','!=','issue')]}"/>
                      <field name="issued_by" attrs="{'readonly':[('state','!=','issue')]}"/>
                  </group>
                </group>
              </page>

              <page string="Owners">
                <separator/>
                <field name="plot_ownership_lines" context="{'default_file_no':active_id}">
                  <tree string="Plot Owners" >
                    <field name="owner_name"/>
                    <field name="date_birth"/>
                    <field name="gender"/>
                  </tree>                  
                </field>
              </page>

              <page string="Plot Co-ordinates">
                <separator/>
                <field name="plot_coordinates" context="{'default_file_no':active_id}">
                  <tree string="Plot Co-ordinates">
                    <field name="coordinate_x"/>
                    <field name="coordinate_y"/>
                  </tree>                  
                </field>
              </page>

            <page string="Plot Co-ordinates Map">
                <div id="plot_coordinates_div" style="position:relative; left:0; top:0; width:100%; height:500px;">
                  <iframe id="plotcoordinates_iframe" src="" marginwidth="0" marginheight="0" frameborder="no" 
                            scrolling="yes" style="height:100%; width:100%; border-width:0px;"></iframe>
                </div>
              </page>

            </notebook>           
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

