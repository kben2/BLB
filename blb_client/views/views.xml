    <record id="blb_client.blb_client_form_registry_extended" model="ir.ui.view">
        <field name="name">Clients Form Extended - Registry</field>
        <field name="model">blb_client.blb_client</field>
        <field name="inherit_id" ref="blb_client.blb_client_form" />
        <field name="groups_id" eval="[ (6, 0, [ref('blb_base.blb_branch_user'), ref('blb_base.blb_legal_user'), ref('blb_base.blb_survey_surveyor'), 
          ref('blb_base.blb_planning_officer'), ref('blb_base.blb_processing_user'), ref('blb_base.blb_valuation_officer'), ref('blb_base.blb_lease_user'), 
          ref('blb_base.blb_titleprocessing_user'), ref('blb_base.blb_titleissue_user')]) ]"/>
        <field name="arch" type="xml">
            <field name="receipt_survey" position="attributes">
