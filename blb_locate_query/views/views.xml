                  <iframe id="locatequery_iframe" src="" marginwidth="0" marginheight="0" frameborder="no" 
                            scrolling="yes" style="height:100%; width:100%; border-width:0px;"></iframe>
                </div>
              </page>
            </notebook> -->
          </sheet> 
          <footer>     
            <!-- Blank Footer to hide the Save and Discard buttons -->
          </footer>
        </form>
      </field>
    </record>
