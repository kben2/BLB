                <field name="name"/>
                <field name="id"/>
				<field name="srs"/>
                <field name="northings"/>
                <field name="eastings"/>
				<field name="check_blbland"/>
				<field name="check_wetland"/>
              </group>
              <group>
<!--                 <field name="check_wetland"/>
                <field name="check_surveyed"/>
                <field name="check_blbland"/> -->
              </group>
            </group>
           <!--  <notebook colspan="4">
