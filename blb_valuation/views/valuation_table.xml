    <!-- BLB Land Use Valuation -explicit list view definition ********************************************************************* -->
    <record model="ir.ui.view" id="blb_valuation.landuse_valuation_list">
      <field name="name">Land Use Valuation List</field>
      <field name="model">blb_valuation.landuse_valuation</field>
      <field name="arch" type="xml">
        <tree>
          <field name="landuse_type_id"/>
          <field name="from_range" widget='monetary' options="{'currency_field': 'currency_id'}" />
          <field name="to_range" widget='monetary' options="{'currency_field': 'currency_id'}" />
          <field name="currency_id" invisible="1"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="blb_valuation.landuse_valuation_form">
      <field name="name">Land Use Valuation Form</field>
      <field name="model">blb_valuation.landuse_valuation</field>
      <field name="arch" type="xml">
        <form>   
          <sheet>
            <separator string="Land Use Valuation Form" />
            <group>
              <field name="landuse_type_id"/>
              <field name="from_range" widget='monetary' options="{'currency_field': 'currency_id'}" />
              <field name="to_range" widget='monetary' options="{'currency_field': 'currency_id'}" />
              <field name="currency_id" invisible="1"/>
            </group>        
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div> 
        </form>
      </field>
    </record>


    <!-- BLB Valuation Table - explicit list view definition -->
    <record model="ir.ui.view" id="blb_valuation.valuation_table_list">
      <field name="name">Valuation Table</field>
      <field name="model">blb_valuation.valuation_table</field>
      <field name="arch" type="xml">
        <tree string="Valuation Table">
          <field name="county_id"/>
          <field name="district_id"/>
          <field name="subcounty_id"/>
          <field name="parish_id"/>
          <field name="village_id"/>  
          <field name="landuse_valuation_ids" widget='many2many_tags'/>     
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="blb_valuation.valuation_table_form">
      <field name="name">Valuation Table Form</field>
      <field name="model">blb_valuation.valuation_table</field>
      <field name="arch" type="xml">
        <form string="Valuation Table Form">
          <sheet>
            <separator string="Valuation Table Form" />
            <group>
              <field name="county_id"/>
              <field name="district_id"/>
              <field name="subcounty_id"/>
              <field name="parish_id"/>
              <field name="village_id"/>
            </group>
            <notebook colspan="4">
              <page string="Land Use Valuations">
                <field name="landuse_valuation_ids">  
                  <tree string="Land Use Valuations">
                    <control>
                      <create name="add_landusevaluation_control" string="Add Land Use Valuation"/>
                    </control>
                    <field name="landuse_type_id"/>
                    <field name="from_range" widget='monetary' options="{'currency_field': 'currency_id'}" />
                    <field name="to_range" widget='monetary' options="{'currency_field': 'currency_id'}" />
                    <field name="currency_id" invisible="1"/>
                  </tree>                  
                </field>
              </page> 
            </notebook>
          </sheet>
        </form>
      </field>
    </record>



    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="blb_valuation.action_window_counties">
      <field name="name">BLB - Counties</field>
      <field name="res_model">blb_valuation.counties</field>
      <field name="view_mode">tree,form</field>
