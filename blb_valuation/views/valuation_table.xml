<odoo>
  <data>
    <!-- BLB Counties -explicit list view definition ********************************************************************* -->
    <record model="ir.ui.view" id="blb_valuation.counties_list">
      <field name="name">Counties List</field>
      <field name="model">blb_valuation.counties</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="blb_valuation.counties_form">
      <field name="name">Counties Form</field>
      <field name="model">blb_valuation.counties</field>
      <field name="arch" type="xml">
        <form>   
          <sheet>
            <separator string="BLB County Form" />
            <group>
              <field name="name"/>
            </group>        
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div> 
        </form>
      </field>
    </record>

    <!-- BLB Districts -explicit list view definition ********************************************************************* -->
